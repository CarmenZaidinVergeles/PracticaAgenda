<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/str_Nombre"
        android:id="@+id/tvContacto"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/str_Telefono"
        android:id="@+id/tvTelefono"
        android:layout_below="@+id/tvContacto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivContacto"
        android:src="@drawable/ic_person_black_24dp"
        android:layout_alignBottom="@+id/tvTelefono"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="31dp"
        android:layout_marginEnd="31dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivMas"
        android:layout_alignTop="@+id/ivContacto"
        android:layout_toLeftOf="@+id/ivContacto"
        android:layout_toStartOf="@+id/ivContacto"
        android:src="@drawable/mas"
        android:visibility="visible"
        android:onClick="mostrar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/tvSegNum"
        android:layout_below="@+id/tvTelefono"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/ivMas"
        android:layout_toStartOf="@+id/ivMas" />

</RelativeLayout>